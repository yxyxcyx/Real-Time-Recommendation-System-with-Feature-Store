# Real-Time Recommendation System Environment Variables
# Copy this file to .env and update values as needed

# System Configuration
RECSYS_ENV=development
RECSYS_DEBUG=true
RECSYS_CONFIG=configs/config.yaml

# Feature Store
REDIS_URL=redis://localhost:6379
FEAST_PROJECT=recsys_features
FEAST_REGISTRY_PATH=feature_store/registry/registry.db

# Kafka Streaming
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_CONSUMER_GROUP=recsys-consumer
KAFKA_AUTO_OFFSET_RESET=latest

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# MLflow Tracking
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT_NAME=recsys_experiments

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_ADMIN_PASSWORD=admin

# Model Configuration
MODEL_CHECKPOINT_DIR=models/checkpoints
MODEL_ARTIFACTS_DIR=models/artifacts

# Shadow Deployment
SHADOW_DEPLOYMENT_ENABLED=true
SHADOW_TRAFFIC_PERCENTAGE=5

# Database (if using PostgreSQL for metadata)
# DATABASE_URL=postgresql://user:password@localhost/recsys

# AWS Configuration (if using S3 for model storage)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_REGION=us-west-2
# S3_BUCKET=recsys-models

# Security
SECRET_KEY=change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/recsys.log

# Performance Tuning
CACHE_TTL_SECONDS=300
BATCH_SIZE=32
MAX_WORKERS=10
CONNECTION_POOL_SIZE=20
